<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ServiceFragment"
    android:orientation="vertical"
    android:paddingTop="10dp"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="8dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cultivation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cultivation_process"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Cultivation Process"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:paddingVertical="5dp"
                            android:background="@drawable/blur_background"
                            android:paddingLeft="10dp"
                            />

                    </RelativeLayout>





                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/machinery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/machinery"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Machinery"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:background="@drawable/blur_background"
                            />





                    </RelativeLayout>





                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="8dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/hire_woker"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hire Worker"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:background="@drawable/blur_background"
                            />





                    </RelativeLayout>





                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/disease"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Crop Disease Solution"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/blur_background"
                            />





                    </RelativeLayout>





                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:layout_marginBottom="80dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/weather"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Weather Forecast"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:background="@drawable/blur_background"
                            />





                    </RelativeLayout>





                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/machinery"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Machinery"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:background="@drawable/blur_background"
                            />





                    </RelativeLayout>





                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>




    </ScrollView>














</LinearLayout>